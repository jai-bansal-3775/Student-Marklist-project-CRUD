<%-include('./partials/header.ejs') %>

<!-- <h1>Jai Bansal </h1> -->

<style>
    body {
        background-color: #222; /* Dark background color */
    }

    .container {
        background-color: #333; /* Darker container background color */
        color: white; /* Text color */
        border-radius: 10px; /* Rounded corners for the container */
        padding: 20px; /* Add some padding for content inside the container */
    }
</style>

<div class=" container">
    <div class="row">
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-success text-center">
                Add New Student
            </h2>
            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" />
                </div>
                <div class="mb-3">
                    <label for="roll_no" class="form-label">Roll_no</label>
                    <input type="text" class="form-control" id="roll_no" name="roll_no"/>
                </div>
                <div class="mb-3">
                    <label for="marks" class="form-label">Marks</label>
                    <input type="text" class="form-control" id="marks" name="marks"/>
                </div>
                <button class="btn btn-primary" type="submit">Add</button>
            </form>
        </div>
        <div class="col-sm-6 mt-5">
            <h2 class="alert alert-danger text-center">
                List of Students
            </h2>
            <table class="table table-striped table hover">
                <thead>
                    <tr>
                        <th scope="col">No</th>
                        <th scope="col">Name</th>
                        <th scope="col">Roll-no</th>
                        <th scope="col">Marks</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% var i= 1 %>
                    <% data.forEach((item)=>{%>
                        <tr>
                            <td><%= i++ %></td>
                            <td><%= item.name %> </td>
                            <td> <%= item.roll_no %> </td>
                            <td> <%= item.marks %></td>
                            <td>
                                <form action="/student/edit/<%= item._id %>" method="get" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-pen-square text-info"></i>
                                    </button>
                                </form>

                                <form action="/student/delete/<%= item._id %>" method="post" class="d-inline">
                                    <button type="submit" class="btn">
                                        <i class="fas fa-trash text-danger"></i>
                                    </button>
                                </form>
                                
                            </td>
                        </tr>
                    <%  }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %>
    